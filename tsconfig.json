{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [ "es6", "dom" ],
    "rootDir": "./src",
    "outDir": "./lib",
    "composite": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules/",
    "**/*.test.*",
    "lib/"
  ]
}
