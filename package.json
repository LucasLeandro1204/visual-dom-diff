{
  "name": "visual-dom-diff",
  "version": "0.1.1",
  "description": "Highlight differences between two DOM trees.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib",
    "!/lib/**/*.test.js",
    "!/lib/**/*.test.d.ts"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "prettier": "prettier --list-different 'src/**/*.{ts,tsx}'",
    "tslint": "tslint --project .",
    "tsc": "tsc -b .",
    "test": "jest",
    "demo": "webpack -p",
    "build": "npm run clean && npm run prettier && npm run tslint && npm run tsc && npm test",
    "preversion": "npm outdated && npm run build && npm run demo && git add docs",
    "postversion": "git push && git push origin v${npm_package_version}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Teamwork/visual-dom-diff.git"
  },
  "keywords": [
    "visual",
    "dom",
    "diff"
  ],
  "author": "Greg Kubisa <gkubisa@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Teamwork/visual-dom-diff/issues"
  },
  "homepage": "https://github.com/Teamwork/visual-dom-diff#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "@types/diff": "^4.0.2",
    "diff": "^4.0.1"
  }
}
